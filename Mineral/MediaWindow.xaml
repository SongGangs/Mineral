<Window x:Class="Mineral.MediaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="播放器" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="250*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <Button Name="Btn_ChoseFile" Template="{StaticResource ChoseFileBtnTemplate}" HorizontalAlignment="Left" ToolTip="选择播放文件" Click="Btn_ChoseFile_Click"></Button>
        </StackPanel>
        <Border Grid.Row="1" BorderBrush="#FF75F6F8" BorderThickness="1.5">
            <MediaElement Name="mediaElement" Margin="0" Source="../Media/符山石.avi"/>
        </Border>
    </Grid>
</Window>
